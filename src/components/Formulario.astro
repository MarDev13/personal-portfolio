<div class="bg-purple-900/8 pt-10 pb-10 border-1 border-stone-500 border-dashed rounded-xl">
  <form action="https://getform.io/f/aroypjmb" method="POST" class="max-w-lg mx-auto space-y-4">
    

    <div class="flex flex-wrap justify-center gap-4">
      <div class="flex flex-col w-full max-w-xs">
        <label class="opacity-80" for="name">Nombre</label>
        <input class="w-full bg-gray-800 opacity-80 border-2 border-gray-700 text-center p-2 rounded-xl placeholder:text-xs" type="text" name="name" placeholder="Escribe tu nombre aquí"/>
      </div>

      <div class="flex flex-col w-full max-w-xs">
        <label class="opacity-80" for="email">Correo electrónico</label>
        <input class="w-full bg-gray-800 opacity-80 border-2 border-gray-700 text-center p-2 rounded-xl placeholder:text-xs" type="email" name="email" required placeholder="Ejemplo@gmail.com"/>
      </div>
    </div>

  
    <div class="flex flex-col w-full max-w-lg mx-auto">
      <label class="opacity-80" for="asunto">Asunto</label>
      <input class="w-full bg-gray-800 opacity-80 border-2 border-gray-700 text-center p-2 rounded-xl placeholder:text-xs" type="text" name="subject" required placeholder="Escribe el asunto aquí"/>
    </div>

  
    <div class="flex flex-col w-full max-w-lg mx-auto">
      <label class="opacity-80" for="message">Mensaje</label>
      <textarea class="w-full bg-gray-800 opacity-80 border-2 border-gray-700 text-center p-2 rounded-xl placeholder:text-xs h-32 resize-none" name="message" required placeholder="Escribe el mensaje aquí"></textarea>
    </div>

    <input type="hidden" name="_gotcha" style="display:none !important">

   
    <div class="flex justify-center">
      <input class="hover:bg-gray-800 hover:scale-110 rounded-2xl w-24 opacity-80 p-2 bg-gray-700 text-white" type="submit" value="Enviar">
    </div>

  </form>
</div>

